<Window x:Class="Futuremud_Configuration_Tool.Model.LoadingSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="650" Width="650" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <Image Source="../Images/FM Logo.png" HorizontalAlignment="Center" VerticalAlignment="Top" MaxHeight="82" Margin="3" />
            <Label Content="FutureMUD Building Tool" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
            <TextBox Name="ConsoleOutputTextBox" Height="300" IsReadOnly="true" Text="{Binding Text}" TextChanged="ConsoleOutputTextBox_TextChanged"></TextBox>
            <Button Name="LaunchButton"  Content="Launch" IsEnabled="False" Click="LaunchButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
