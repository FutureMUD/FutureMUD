<Window x:Class="Futuremud_Configuration_Tool.UI.HelpScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HelpScreen" Height="300" Width="300">
    <Window.Resources>
        <ResourceDictionary Source="Common.xaml" />
    </Window.Resources>
    <Grid>
        <DockPanel>
            <Label Content="Help" FontSize="16" FontWeight="Bold" DockPanel.Dock="Top" HorizontalAlignment="Center" />
            <Label Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="2">
                <StackPanel>
                    <TextBlock TextWrapping="Wrap" Margin="2">
                <Bold>Item #1:</Bold> Some text about help item #1
                    </TextBlock>
                    <Rectangle Height="1" HorizontalAlignment="Stretch" Margin="2" Fill="Black" />
                    <TextBlock TextWrapping="Wrap" Margin="2">
                    <Bold>Item #2:</Bold> Some text about item #2
                    </TextBlock>
                </StackPanel>
            </Label>
        </DockPanel>
    </Grid>
</Window>